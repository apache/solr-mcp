<configuration>
    <!-- Include Spring Boot's default logging configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console appender - used by all profiles -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN:-%d{yyyy-MM-dd HH:mm:ss.SSS} %5p --- [%15.15t] %-40.40logger{39} : %m%n}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--
        OpenTelemetry Log Appender - HTTP mode only
        This appender exports logs via OTLP to the observability stack.
        It is only active when running with the 'http' Spring profile.

        IMPORTANT: This appender must be installed programmatically via
        OpenTelemetryAppenderInstaller to connect to the OpenTelemetry SDK.
    -->
    <springProfile name="http">
        <appender name="OTEL" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
            <!-- Capture MDC (Mapped Diagnostic Context) as log attributes -->
            <captureExperimentalAttributes>true</captureExperimentalAttributes>
            <captureCodeAttributes>true</captureCodeAttributes>
            <captureMarkerAttribute>true</captureMarkerAttribute>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="OTEL"/>
        </root>
    </springProfile>

    <!--
        STDIO mode (default) - No console logging
        STDIO mode must have NO stdout output as it uses stdin/stdout
        for MCP protocol communication. Default profile is stdio.
    -->
    <springProfile name="stdio">
        <root level="OFF"/>
    </springProfile>

</configuration>
